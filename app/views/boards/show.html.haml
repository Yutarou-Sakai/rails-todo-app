.container 
  %h2= @board.title
  - @tasks.each do |task|
    = link_to board_task_path(@board) do
      .card
        .card_content
          - if task.eyecatch.attached?
            .card_image
              = image_tag task.eyecatch
          .card_title
            = task.title
          .card_text
            = task.content
          .card_text
            = task.deadline
          .card_detail
            = image_tag task.user.avatar_image
  = link_to new_board_task_path(@board) do
    .add_new_board
      .add_new_board_title
        %p + Add new task